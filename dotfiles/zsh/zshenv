# This file handles setting of various environment variables EXCEPT modifications to
# $PATH. $PATH modifications are stored in $ZSH_CONFIG_PATH/path.zsh. See related notes
# in that file.


# Default editors
export EDITOR='vim'
export VISUAL='vim'
export PAGER='less'


# -------------------------------------------------------------------------------
# zsh
# -------------------------------------------------------------------------------

export ZSH_CONFIG_PATH=$HOME/.zsh


# -------------------------------------------------------------------------------
# fzf
# -------------------------------------------------------------------------------

export FZF_CONFIG_PATH=$HOME/.fzf

# Have fzf use `ag` instead of default `find` command
if ! ag_cmd="$(type -p ag)" || [[ -z "$ag_cmd" ]]; then
  export FZF_DEFAULT_COMMAND='ag -g ""'
  export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
  export FZF_ALT_C_COMMAND="$FZF_DEFAULT_COMMAND"
fi
